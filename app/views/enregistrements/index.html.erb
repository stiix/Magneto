    <td><%= enregistrement.marge_apres %> minutes</td>
    <td><%= link_to 'Supprimer', enregistrement, confirm: 'Are you sure?', method: :delete,  :class=>"btn btn-primary btn-supprimer" %></td>
  </tr>
<% end %>
