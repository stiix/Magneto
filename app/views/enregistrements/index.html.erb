  <tr class = "table<%= compteur%2 %>">
    <td><%= enregistrement.programme.libelle %></td>
    <td><%= enregistrement.programme.debut.strftime('%H:%M') %></td>
    <td><%= enregistrement.programme.fin.strftime('%H:%M') %></td>    
